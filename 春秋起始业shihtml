						<script>
						  window.onload = function() {
							// 获取用户代理字符串
							var userAgent = navigator.userAgent;
					  
							// 判断设备类型
							var isMobile = /iPhone|iPad|iPod|Android/i.test(userAgent);
							var deviceType = isMobile ? "移动设备" : "桌面设备";
					  
							// 推断设备型号
							var deviceModel;
							if (isMobile) {
							  if (/iPhone/.test(userAgent)) {
								deviceModel = "iPhone";
							  } else if (/iPad/.test(userAgent)) {
								deviceModel = "iPad";
							  } else if (/iPod/.test(userAgent)) {
								deviceModel = "iPod touch";
							  } else if (/Android/.test(userAgent)) {
								var match = userAgent.match(/Android\s([^\s;]+)/);
								deviceModel = match ? match[1] : "Android 设备";
							  }
							} else {
							  var match = userAgent.match(/\(([^)]+)\)/);
							  var parts = match[1].split(";");
							  var os = parts[0].trim();
							  var browser = parts[1].trim();
							  deviceModel = os + " 上的 " + browser;
							}
					  
							// 显示设备信息
							var deviceInfo = document.getElementById("device-info");
							deviceInfo.innerHTML = "设备类型：" + deviceType + "<br>设备型号：" + deviceModel;
						  }
						</script>
					  </head>
					  <body>
						<div id="device-info"></div>
					  </body>
